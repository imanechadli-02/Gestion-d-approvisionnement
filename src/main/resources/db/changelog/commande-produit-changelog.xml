<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
           http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="prof">
        <createTable tableName="commande_produit">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="commande_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="produit_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="quantite" type="INT"/>
            <column name="prix_unitaire" type="DECIMAL(10,2)"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="commande_produit"
                baseColumnNames="commande_id"
                referencedTableName="commande"
                referencedColumnNames="id"
                constraintName="fk_cp_commande"/>

        <addForeignKeyConstraint
                baseTableName="commande_produit"
                baseColumnNames="produit_id"
                referencedTableName="produit"
                referencedColumnNames="id"
                constraintName="fk_cp_produit"/>
    </changeSet>

</databaseChangeLog>
