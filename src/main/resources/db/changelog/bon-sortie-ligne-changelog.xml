<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
           http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="prof">
        <createTable tableName="bon_sortie_ligne">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="bon_sortie_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="produit_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="quantite" type="INT"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="bon_sortie_ligne"
                baseColumnNames="bon_sortie_id"
                referencedTableName="bon_sortie"
                referencedColumnNames="id"
                constraintName="fk_bsl_bon_sortie"/>

        <addForeignKeyConstraint
                baseTableName="bon_sortie_ligne"
                baseColumnNames="produit_id"
                referencedTableName="produit"
                referencedColumnNames="id"
                constraintName="fk_bsl_produit"/>
    </changeSet>

</databaseChangeLog>
