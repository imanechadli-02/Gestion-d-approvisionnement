<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
           http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="prof">
        <createTable tableName="bon_sortie">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="numero_bon" type="VARCHAR(50)"/>
            <column name="date_sortie" type="DATE"/>
            <column name="atelier" type="VARCHAR(100)"/>
            <column name="motif" type="VARCHAR(50)"/>
            <column name="statut" type="ENUM('BROULLION','VALIDE','ANNULE')">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
