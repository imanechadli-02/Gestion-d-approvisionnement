<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
           http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="prof">
        <createTable tableName="fournisseur">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="raison_sociale" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="adresse" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="personne_contact" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="email" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="telephone" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <column name="ville" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <column name="ice" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
